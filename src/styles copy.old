.grid {
    display: grid;
    gap: 20px;
    grid-template-columns: 1fr; /* Ensures one item per row */
    justify-items: center;
  }
  
  .card {
    width: 80%; /* Adjust to control the card size */
    max-width: 600px; /* Prevents cards from being too wide */
  }
  

.card-img {
    width: 100%;
    height: auto;
    border-radius: 5px;
}

.btn {
    background: black;
    color: white;
    padding: 10px 15px;
    border: none;
    margin-top: 10px;
    cursor: pointer;
    width: 100%;
}

.btn:hover {
    background: gray;
}

/* Footer (Same color as Navbar) */
.footer {
    background: #333;
    color: white;
    padding: 10px;
    margin-top: 30px;
}

/* Countdown Timer */
.countdown-container {
    text-align: center;
    padding: 20px;
    background: #ff5733;
    /* Orange-red for urgency */
    color: white;
    font-size: 1.5em;
}

.countdown {
    font-weight: bold;
    font-size: 2em;
}

.gallery-scroll {
    display: flex;
    overflow-x: auto;
    gap: 10px;
    padding: 10px;
    white-space: nowrap;
    scrollbar-width: thin;
  }