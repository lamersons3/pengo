* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

body {
    background-color: #f5f5f5;
    color: #333;
    text-align: center;
}

/* Navbar (Same color as Footer) */
.navbar {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px;
    background: #333;
    color: white;
}

.logo {
    width: 50px;
    height: 50px;
    margin-right: 10px;
}

/* Product Grid */
.container {
    max-width: 1100px;
    margin: 20px auto;
    padding: 20px;
}

